generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  login            String   @unique
  sub              String?
  email            String   @unique
  name             String?
  surname          String?
  password         String
  avatar           String?
  emailIsValidated Boolean
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

