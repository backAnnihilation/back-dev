

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("USERS_DATABASE_URL")
}

model UserAccount {
  id                           String         @id @default(uuid())
  userName                     String         @unique
  email                        String
  passwordHash                 String
  confirmationCode             String
  confirmationExpDate          DateTime
  isConfirmed                  Boolean
  passwordRecoveryCode         String?
  passwordRecoveryExpDate      DateTime?
  createdAt                    DateTime       @default(now())
  updatedAt                    DateTime       @updatedAt

  userSessions                 UserSession[]  @relation("UserSessions")
}

model UserSession {
  id                String         @id @default(uuid())
  ip                String
  userAgentInfo     String         @map("user_agent_info")
  deviceId          String         @map("device_id")
  refreshToken      String         @map("refresh_token")
  rtIssuedAt        DateTime       @map("rt_issued_at")
  rtExpirationDate  DateTime       @map("rt_expiration_date")

  userAccount       UserAccount    @relation("UserSessions", fields: [userId], references: [id])
  userId            String
}